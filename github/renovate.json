{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeMinor"
  ],
  "platform": "github",
  "repositories": ["{{REPOSITORY}}"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "type definitions",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^eslint", "^@typescript-eslint/"],
      "groupName": "linting",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^@testing-library/", "^vitest", "^@vitest/"],
      "groupName": "testing",
      "automerge": true
    },
    {
      "matchPackageNames": ["react", "react-dom"],
      "groupName": "react",
      "automerge": false
    }
  ],
  "schedule": ["after 2am and before 4am on tuesday"],
  "timezone": "UTC",
  "labels": ["dependencies"],
  "commitMessagePrefix": "chore:",
  "prTitle": "chore: {{title}}",
  "prBodyColumns": ["Package", "Change", "Age", "Adoption", "Passing", "Confidence"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["after 2am and before 4am on sunday"]
  }
}
